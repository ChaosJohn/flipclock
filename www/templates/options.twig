<h2>Options</h2>

<div class="toggle" data-binding="timeMode" data-value="{{ timeMode }}">
	<div class="label">Set Mode</div>
	<div class="options">
	    <button data-value="12hr" class="option toggle_left {{ timeMode=="12hr"?"active":"" }}">12 Hr</button>
	    <button data-value="24hr" class="option toggle_right {{ timeMode=="12hr"?"":"active" }}">24 Hr</button>
	</div>
</div>

<div class="toggle" data-binding="showSeconds" data-value="{{ showSeconds }}">
	<div class="label">Show Seconds</div>
	<div class="options">
	    <button data-value="true" class="option toggle_left {{ showSeconds?"active":"" }}">Yes</button>
	    <button data-value="false" class="option toggle_right {{ showSeconds?"":"active" }}">No</button>
	</div>
</div>

<div class="toggle" data-binding="font" data-value="{{ font }}">
	<div class="label">Font</div>
	<div class="options">
	    <button data-value="default" class="option toggle_left {{ font=="default"?"active":"" }}">1</button>
	    <button data-value="sahara" class="option toggle_right {{ font=="sahara"?"active":"" }}">2</button>
	</div>
</div>

<div class="action_bar">
    <button class="button confirm" action="save_settings">Save</button>
    <button class="button cancel" action="hide_settings">Cancel</button>
</div>
